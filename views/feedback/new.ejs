<%- include("../partials/header.ejs") %>


<section class="contact-clean" style="min-height: 75.7vh;">
    <form method="post" action="/feedback/<%= current_user.username%>/create">
        <h2 class="text-center">Feedback Form</h2>
        <div class="form-group" >
            <select class="form-control" name="service">
                <optgroup label="Service">
                    <option value="Walk-in Service" selected="">Walk-in Service</option>
                    <option value="Phone Service">Phone Service</option>
                    <option value="Email Service">Email Service</option>
                    <option value="Live Chat Service">Live Chat Service</option>
                    <option value="Chatbot Service">Chatbot Service</option>
                </optgroup>
            </select></div>
        <div class="form-group"><textarea class="form-control" name="description" placeholder="Feedback Description" rows="14"></textarea></div>
        <div class="form-group"><button class="btn btn-primary" type="submit" style="background: #0daed1;color: rgb(255, 255, 255);">Submit</button></div>
    </form>
</section>


<%- include("../partials/footer.ejs") %>